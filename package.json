{
    "name": "ezg-gesture",
    "version": "0.0.1",
    "description": "Easily add gestures functionality with simple native DOM events",
    "exports": {
        ".": "./lib/index.js",
        "./pinch": "./lib/pinch.js",
        "./drag": "./lib/drag.js"
    },
    "scripts": {
        "build": "rollup -c",
        "copy-dist": "mkdir -p demos/dist && cp -r dist/ demos/",
        "publish-ghp": "copy-dist && git subtree push --prefix dist origin gh-pages",
        "prepublishOnly": "build"
    },
    "files": [
        "lib/*",
        "dist/*",
        "README.md",
        "LICENSE"
    ],
    "keywords": [
        "gesture",
        "pinch",
        "drag",
        "move",
        "mouse",
        "touch",
        "dom",
        "event",
        "interaction"
    ],
    "author": "Mohammed Al-Qurafi",
    "license": "MIT",
    "devDependencies": {
        "rollup": "^2.41.5",
        "rollup-plugin-terser": "^7.0.2",
        "terser": "^5.6.0"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run gh-page"
        }
    }
}
